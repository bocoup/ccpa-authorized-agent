{{>common-top}}

<div id="pages">
	<div id="part-1" class="column">
		<h1>Verify your phone number</h1>
		<p>Please enter the 6-digit code we just sent you.</p>
		<form id="phone-verification-form" class="sign-up verify">
			<div class="contact code">
				<label for="code">Code</label>
				<input id="code" type="text" name="code" placeholder="Code">
			</div>
			<div class="controls">
				<input id="verify-code" type="submit" value="Verify Code">
			</div>
		</form>
	</div>

	<div id="part-2" class="column" style="display: none;">
		<h1>You’re almost there!</h1>
		<p>
			As a next step, please check your inbox for an email titled <b>Sign the Authorization Form</b>.
		</p>
		<p>
			This email contains a link to an authorization letter you can sign to give Consumer Reports permission to send data requests for you.
		</p>
		<p>
			Once your authorization letter is signed, you will receive a note from our team within 24 hours confirming your successful enrollment and participation in the study.
		</p>
		<p>
			You can bookmark this page and return to it at any time. If you decide you’d like to review or revoke your authorization, click <a id="status-link" href="#">here.</a>
		</p>
	</div>

	<div id="status-page" class="column" style="display: none;">
		<h1>Verification Status</h1>
		<ul>
			<li>Email: Verified</li>
			<li>Phone: Verified</li>
		</ul>
		<div class="controls">
			<button id="revoke-authorization" type="button">Please revoke my authorization</button>
		</div>
	</div>

	<div id="authorization-revoked-page" class="column" style="display: none;">
		<h1>Success</h1>
		<p>We have received your request to revoke authorization.</p>
	</div>
</div>
	

<script src="/static/frontend.js"></script>

{{>common-bottom}}
